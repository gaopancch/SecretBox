<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gaopan="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_gesture_set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F7"
    tools:context="com.gaopan.serectbox.activity.GestureSetActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#F2F2F7"
        android:visibility="gone"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/user_name_gesture" />
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="#F2F2F7"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/alert_text_gesture" />
    <com.gaopan.serectbox.view.GestureLockViewGroup
        android:id="@+id/id_gestureLockViewGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F2F7"
        android:gravity="center_vertical"
        gaopan:count="3"
        gaopan:tryTimes="5"
        gaopan:color_finger_on="#FF1734BF"  >
    </com.gaopan.serectbox.view.GestureLockViewGroup>
    <Button
        android:id="@+id/forget_gesture"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="right"
        android:background="#F2F2F7"
        android:gravity="center"
        android:visibility="gone"
        android:textAllCaps="false"
        android:text="  Forget gesture !  \n  Clear it !  -->  "/>
</LinearLayout>
